<Page x:Class="SD106_Onewhero_Assessment_2.View.RegisterPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
        mc:Ignorable="d"
        Title="RegisterPage" Height="550" Width="800">

    <Grid>
        <StackPanel>
            <Image Source="/images/Logo_7.png" Width="120"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1" Margin="0,30,0,0">
                        <StackPanel>
                            <TextBlock Text="Full Name"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"/>

                            <TextBox Name="txtFullName" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                                 Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                                 Height="28" VerticalContentAlignment="Center">
                            </TextBox>

                            <TextBlock Text="Mobile Number"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Margin="0,15,0,0"/>

                            <TextBox Name="txtNumber" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                                 Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                                 Height="28" VerticalContentAlignment="Center">
                            </TextBox>

                            <TextBlock Text="Email"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Margin="0,15,0,0"/>

                            <TextBox Name="txtEmail" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                                 Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                                 Height="28" VerticalContentAlignment="Center">
                            </TextBox>

                            <TextBlock Text="Password"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Margin="0,15,0,0"/>

                            <PasswordBox Name="txtPass" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                                     Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                                     Height="28" VerticalContentAlignment="Center">
                            </PasswordBox>

                            <Button Name="btnRegister" Background="#156aac" BorderThickness="0" Content="Register" Foreground="White"
                                FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Margin="0,25,0,0">

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100"  Height="24"
                                            CornerRadius="2"
                                            Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">

                                <TextBlock Text="Have a login already?"
                                       Foreground="DarkGray"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       FontFamily="Arial"/>

                                <TextBlock Name="Login"
                                       FontSize="12"
                                       FontWeight="Medium"
                                       FontFamily="Arial"
                                       Cursor="Hand"
                                       Margin="8,0,0,0">
                                <Hyperlink Click="Hyperlink_Login_Click" Foreground="White">Login</Hyperlink>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="2" Margin="30,30,0,0">

                        <TextBlock Text="Areas of interest:" Foreground="DarkGray"/>
                        <StackPanel>

                            <CheckBox Margin="0,30,0,0">
                                <TextBlock Text="Kiwi Twilight Enclosure" Foreground="White"/>
                            </CheckBox>
                            <CheckBox Margin="0,20,0,0">
                                <TextBlock Text="Marae" Foreground="White"/>
                            </CheckBox>
                            <CheckBox Margin="0,20,0,0">
                                <TextBlock Text="Museum" Foreground="White"/>
                            </CheckBox>
                            <CheckBox Margin="0,20,0,0">
                                <TextBlock Text="Native Birds" Foreground="White"/>
                            </CheckBox>
                            <CheckBox Margin="0,20,0,0">
                                <TextBlock Text="Reptile Exhibition" Foreground="White"/>
                            </CheckBox>
                            <CheckBox Margin="0,20,0,0">
                                <TextBlock Text="Seasonal Events" Foreground="White"/>
                            </CheckBox>

                        </StackPanel>
                    </Grid>

                </Grid>
        </StackPanel>
    </Grid>
           
</Page>
