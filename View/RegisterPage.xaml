<Page x:Class="SD106_Onewhero_Assessment_2.Model.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="RegisterPage"
      Background="Transparent">

    <Viewbox Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Width="600">
            <!-- Fixed width for entire page content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Logo -->
                <RowDefinition Height="*"/>
                <!-- Main content -->
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Grid.Row="0" Source="/images/Logo_7.png" Width="120" HorizontalAlignment="Center" Margin="0,5,0,10"/>

            <!-- Main Content -->
            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Registration Form -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Full Name" Foreground="DarkGray" FontSize="12" FontWeight="Medium"/>
                    <TextBox x:Name="txtName" Width="200" Height="28" Background="Transparent" Foreground="White" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Margin="0,5,0,10" HorizontalAlignment="Left"/>

                    <TextBlock Text="Mobile Number" Foreground="DarkGray" FontSize="12" FontWeight="Medium"/>
                    <TextBox x:Name="txtPhone" Width="200" Height="28" Background="Transparent" Foreground="White" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Margin="0,5,0,10" HorizontalAlignment="Left"/>

                    <TextBlock Text="Email" Foreground="DarkGray" FontSize="12" FontWeight="Medium"/>
                    <TextBox x:Name="txtEmail" Width="200" Height="28" Background="Transparent" Foreground="White" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Margin="0,5,0,10" HorizontalAlignment="Left"/>

                    <TextBlock Text="Password" Foreground="DarkGray" FontSize="12" FontWeight="Medium"/>
                    <PasswordBox x:Name="txtPassword" Width="200" Height="28" Background="Transparent" Foreground="White" BorderBrush="DarkGray" BorderThickness="0,0,0,1" Margin="0,5,0,15" HorizontalAlignment="Left"/>

                    <Button Name="btnRegister" Width="100" Height="28" HorizontalAlignment="Center" Background="#156aac" BorderThickness="0" Content="Register" Foreground="White" FontSize="12" Cursor="Hand" Margin="0,0,0,10" Click="btnRegister_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="2" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <TextBlock Text="Have a login already?" Foreground="DarkGray" FontSize="12" Padding="35,0,0,0"/>
                        <TextBlock Margin="5,0,0,0">
                            <Hyperlink Click="Hyperlink_Login_Click" Foreground="White">Login</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <!-- Areas of Interest checkboxes -->
                <StackPanel Grid.Column="1" x:Name="interestPanel">
                    <TextBlock Text="Areas of interest:" Foreground="DarkGray" Margin="0,0,0,10"/>
                    <CheckBox Tag="1" Margin="0,10,0,0">
                        <TextBlock Text="Kiwi Twilight Enclosure" Foreground="White"/>
                    </CheckBox>
                    <CheckBox Tag="2" Margin="0,10,0,0">
                        <TextBlock Text="Marae" Foreground="White"/>
                    </CheckBox>
                    <CheckBox Tag="3" Margin="0,10,0,0">
                        <TextBlock Text="Museum" Foreground="White"/>
                    </CheckBox>
                    <CheckBox Tag="4" Margin="0,10,0,0">
                        <TextBlock Text="Native Birds" Foreground="White"/>
                    </CheckBox>
                    <CheckBox Tag="5" Margin="0,10,0,0">
                        <TextBlock Text="Reptile Exhibition" Foreground="White"/>
                    </CheckBox>
                    <CheckBox Tag="6" Margin="0,10,0,0">
                        <TextBlock Text="Seasonal Events" Foreground="White"/>
                    </CheckBox>
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</Page>
