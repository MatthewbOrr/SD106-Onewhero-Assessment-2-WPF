<Page x:Class="SD106_Onewhero_Assessment_2.View.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="LoginPage"
      Background="Transparent">

    <!-- Viewbox helps content be centered inside the Frame -->
    <Viewbox Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Width="250">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo -->
            <Image Grid.Row="0" Source="/images/Logo_7.png" Width="160" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username Label -->
            <TextBlock Grid.Row="1" Text="Username" Foreground="DarkGray" FontSize="12" FontWeight="Medium"
                       FontFamily="Arial" HorizontalAlignment="Left" Margin="0,0,0,5"/>

            <!-- Username TextBox -->
            <TextBox Grid.Row="2" Name="txtUser" Width="200" Height="28" HorizontalAlignment="Left"
                     FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                     Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                     VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <!-- Password Label -->
            <TextBlock Grid.Row="3" Text="Password" Foreground="DarkGray" FontSize="12" FontWeight="Medium"
                       FontFamily="Arial" HorizontalAlignment="Left" Margin="0,0,0,5"/>

            <!-- PasswordBox -->
            <PasswordBox Grid.Row="4" Name="txtPass" Width="200" Height="28" HorizontalAlignment="Left"
                         FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                         Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                         VerticalContentAlignment="Center" Margin="0,0,0,15"/>

            <!-- Login Button -->
            <Button Grid.Row="5" Name="btnLogin" Width="100" Height="28" HorizontalAlignment="Center"
                    Background="#156aac" BorderThickness="0" Content="Login" Foreground="White"
                    FontSize="12" FontFamily="Arial" Cursor="Hand" Click="btnLogin_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="2"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Register Link -->
            <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Don't have a login?" Foreground="DarkGray" FontSize="12" FontWeight="Medium"
                           FontFamily="Arial"/>
                <TextBlock FontSize="12" FontWeight="Medium" FontFamily="Arial" Cursor="Hand" Margin="5,0,0,0">
                    <Hyperlink Click="Hyperlink_Register_Click" Foreground="White">Register</Hyperlink>
                </TextBlock>
            </StackPanel>

        </Grid>
    </Viewbox>
</Page>
