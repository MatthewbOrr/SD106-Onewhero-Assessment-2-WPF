<Page x:Class="SD106_Onewhero_Assessment_2.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
        mc:Ignorable="d"
        Title="LoginPage" Height="550" Width="800">

    <Grid>
        <StackPanel Width="250" Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,30,0,0"> 

                    <Image  Source="/images/Logo_7.png"
                            Width="160"/>

                    <TextBlock Text="Username"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               Margin="0,25,0,0"/>

                    <TextBox Name="txtUser" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                             Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                             Height="28" VerticalContentAlignment="Center" Margin="0,5,0,0">
                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               Margin="0,15,0,0"/>

                    <PasswordBox Name="txtPass" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                             Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                             Height="28" VerticalContentAlignment="Center" Margin="0,5,0,0">
                    </PasswordBox>

                    <Button Name="btnLogin" Background="#156aac" BorderThickness="0" Content="Login" Foreground="White"
                            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Margin="0,50,0,0" Click="btnLogin_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100"  Height="24"
                    CornerRadius="2"
                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                        
                        <TextBlock Text="Dont have a login?"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"/>

                        <TextBlock Name="Register"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="8,0,0,0">
                            <Hyperlink Click="Hyperlink_Register_Click" Foreground="White">Register</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    
                </StackPanel>
                
            </Grid>
</Page>
