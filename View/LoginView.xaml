<Window x:Class="SD106_Onewhero_Assessment_2.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
        mc:Ignorable="d"
        Title="LoginView" Height="550" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown" Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="35">
        <Border.Background>
            <ImageBrush ImageSource="/images/onewhero-bay.jpeg" Stretch="None"/>
        </Border.Background>
    <Border CornerRadius="30" BorderThickness="5" Opacity="0.93">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#156aac" Offset="0"/>
                    <GradientStop Color="#097153" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop  Color="#094471" Offset="0"/>
                <GradientStop  Color="#093556" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Onewhero Heritage Login" Foreground="White" FontSize="18"
                               FontFamily="Mongolian Baiti" Grid.Column="0" VerticalAlignment="Center" Margin="20,0,0,0"/>
                    
                    <Button Name="btnMinimize" Background="#28aeed" BorderThickness="0" Content="-" Foreground="White"
                            FontSize="16" FontFamily="Mongolian Baiti" Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"  Height="18"
                                        CornerRadius="2"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="btnClose" Background="#0D8756" BorderThickness="0" Content="x" Foreground="White"
                            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"  Height="18"
                                        CornerRadius="2"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="250" Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,35,0,0"> 

                    <Image  Source="/images/Logo_7.png"
                            Width="180"/>

                    <TextBlock Text="Username"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               Margin="0,25,0,0"/>

                    <TextBox Name="txtUser" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                             Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                             Height="28" VerticalContentAlignment="Center" Margin="0,5,0,0">
                    </TextBox>

                    <TextBlock Text="Password"
                               Foreground="DarkGray"
                               FontSize="12"
                               FontWeight="Medium"
                               FontFamily="Arial"
                               Margin="0,15,0,0"/>

                    <PasswordBox Name="txtPass" FontSize="13" FontWeight="Medium" FontFamily="Arial" Background="Transparent"
                             Foreground="White" CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                             Height="28" VerticalContentAlignment="Center" Margin="0,5,0,0">
                    </PasswordBox>

                    <Button Name="btnLogin" Background="#156aac" BorderThickness="0" Content="Login" Foreground="White"
                            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click" Margin="0,50,0,0">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100"  Height="24"
                    CornerRadius="2"
                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                        
                        <TextBlock Text="Dont have a login?"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"/>

                        <TextBlock Name="Register"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="8,0,0,0">
                            <Hyperlink Click="Hyperlink_Register_Click" Foreground="White">Register</Hyperlink>
                        </TextBlock>
                    </StackPanel>
                    
                </StackPanel>
                
            </Grid>
        
    </Border>
    </Border>
</Window>
