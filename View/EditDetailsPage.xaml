<Page x:Class="SD106_Onewhero_Assessment_2.View.EditDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="EditDetailsPage">

    <Grid Background="#80000000">
        <Border Width="400" Height="300"
                Background="White"
                CornerRadius="8"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="20"
                BorderBrush="#156aac"
                BorderThickness="2">


            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                
                <!-- Title Page -->
                <TextBlock Text="Edit Your Details"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#156aac"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <!-- Name Input -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Name"></TextBlock>
                 <!-- Textbox for input -->
                    <TextBox x:Name="txtName"/>
                </StackPanel>

                <!-- Email Input -->
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Email"></TextBlock>
                    <!-- Textbox for input -->
                    <TextBox x:Name="txtEmail"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Phone"></TextBlock>
                    <!-- Textbox for input -->
                    <TextBox x:Name="txtPhone"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Password"></TextBlock>
                    <!-- Textbox for input -->
                    <PasswordBox x:Name="txtPassword"/>
                </StackPanel>
                
                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                    <!-- Save button -->
                    <Button Content="Save" Width="80" Background="#156aac" Foreground="White" Click="btnSave_Click" Margin="5">
                        <!-- Button template to make the corners rounded and match the application aesthetic -->
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="{TemplateBinding Width}" Height="25" CornerRadius="5"
                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <!-- Cancel button -->
                    <Button Content="Cancel" Width="80" Background="#156aac" Foreground="White" Click="btnCancel_Click" Margin="5">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="5"
                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>
                 

        </Border>


    </Grid>
</Page>
