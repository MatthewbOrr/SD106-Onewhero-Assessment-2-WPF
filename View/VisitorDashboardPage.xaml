<Page x:Class="SD106_Onewhero_Assessment_2.View.VisitorDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" Width="680">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Name="Title"
                           Grid.Row="0"
                           Grid.Column="0"
                           Text="Profile"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <Image Source="/images/ProfilePicture.png"
                       Grid.Row="1"
                       Width="200"
                       HorizontalAlignment="Left"/>
                <StackPanel Grid.Row="2">
                    <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="User Name: "
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Normal"
                               Margin="5"/>
                    <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="Email: "
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Normal"
                               Margin="5"/>
                    <TextBlock Grid.Row="2"
                                Grid.Column="0"
                                Text="Mobile Number: "
                                Foreground="White"
                                FontSize="14"
                                FontWeight="Normal"
                               Margin="5"/>
                </StackPanel>

                <TextBlock Grid.Row="1"
                           Grid.Column="1"
                           Text="Current bookings"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="10"
                           VerticalAlignment="Bottom"/>
                <StackPanel Grid.Row="2"
                            Grid.Column="1">
                    <TextBlock
                Text="Booking 1"
                Foreground="White"
                FontSize="14"
                FontWeight="Normal"
               Margin="5"/>
                    <TextBlock 
                Text="Booking 2"
                Foreground="White"
                FontSize="14"
                FontWeight="Normal"
               Margin="5"/>
                    <TextBlock 
                Text="Booking 3"
                Foreground="White"
                FontSize="14"
                FontWeight="Normal"
               Margin="5"/>
                </StackPanel>




            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
