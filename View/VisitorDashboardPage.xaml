<Page x:Class="SD106_Onewhero_Assessment_2.View.VisitorDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VisitorDashboardPage">

    <Grid Background="#1e1e1e" Margin="20">
        <!-- Page Title -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Welcome Message -->
            <RowDefinition Height="Auto"/> <!-- User Profile -->
            <RowDefinition Height="Auto"/> <!-- Upcoming Events Title -->
            <RowDefinition Height="*"/> <!-- Upcoming Events -->
        </Grid.RowDefinitions>
        

        <!-- User Profile -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
        <TextBlock x:Name="txtWelcome" Text="Welcome, [UserName]" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Content="Edit Details" Width="80" Height="24" Background="#156aac" Foreground="White" Cursor="Hand" Click="btnEdit_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="5"
    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Users inputed data -->
            <TextBlock Text="Name:" Grid.Row="0" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="txtName" Grid.Row="0" Grid.Column="1" Foreground="White"/>
            
            <TextBlock Text="Email:" Grid.Row="1" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="txtEmail" Grid.Row="1" Grid.Column="1" Foreground="White"/>

            <TextBlock Text="Phone:" Grid.Row="2" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="txtPhone" Grid.Row="2" Grid.Column="1" Foreground="White"/>

            <TextBlock Text="Registered:" Grid.Row="3" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="txtRegistered" Grid.Row="3" Grid.Column="1" Foreground="White"/>

            <TextBlock Text="Area Of Interest:" Grid.Row="4" Grid.Column="0" Foreground="White" FontWeight="Bold"/>
            <TextBlock x:Name="txtInterest" Grid.Row="4" Grid.Column="1" Foreground="White"/>

        </Grid>

        <!-- Upcoming Events -->
        <TextBlock Grid.Row="2" Text="Upcoming Booked events" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" VerticalAlignment="center"/>
        <Button Grid.Row="2" Content="Cancel Booking" Width="100" Height="30" Background="#156AAC" Foreground="White" HorizontalAlignment="Right" VerticalAlignment="center" Cursor="Hand" Click="CancelBooking_Click" Margin="10">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="5"
Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Grid Grid.Row="3">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <DataGrid Name="dataUpcomingEvents"
                  AutoGenerateColumns="False"
                  Background="White"
                  Foreground="Black"
                  FontSize="14"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Height="250"
                  ScrollViewer.VerticalScrollBarVisibility="disabled"
                  ScrollViewer.HorizontalScrollBarVisibility="disabled">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="BookingID" Binding="{Binding BookingId}" Width="75"/>
                        <DataGridTextColumn Header="Event Name" Binding="{Binding EventTitle}" Width="120"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding EventDate}" Width="100"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="80"/>
                        <DataGridTextColumn Header="NumberOfTicket" Binding="{Binding NumberOfTickets}" Width="50"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Grid>
        <TextBlock Name="txtStatus"
                   Foreground="Black"
                   FontSize="12"
                   Margin="5,10,0,0">
            
        </TextBlock>
          
       
    </Grid>
</Page>
