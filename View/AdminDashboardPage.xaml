<Page x:Class="SD106_Onewhero_Assessment_2.View.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboardPage">


    <Grid Margin="0,10,0,10" Width="680">
        <!-- Page title -->
        <TextBlock Text="Admin Dashboard"
                   Foreground="White"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Scrollable list of events -->
        <ScrollViewer Margin="0,40,0,0"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Visitor Tracking"
                           Grid.Row="0"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <TextBlock Text="Visitors"
                           Grid.Row="1"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Normal"
                           Margin="10,0,10,0"/>

                <TextBlock Text="Interests"
                           Grid.Row="2"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Normal"
                           Margin="10,0,10,0"/>

                <TextBlock Text="Event Bookings"
                           Grid.Row="3"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Normal"
                           Margin="10,0,10,0"/>

                <TextBlock Text="Promotional Tools"
                           Grid.Row="4"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <TextBlock Text="Seasonal Events"
                           Grid.Row="5"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Normal"
                           Margin="10,0,10,0"/>
                
                <TextBlock Text="Targeted Advertisements"
                           Grid.Row="6"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Normal"
                           Margin="10,0,10,0"/>

                <!-- This ListBoxs -->
            <ListBox Name="lstVisitors"
                     Grid.Column="1"
                     Grid.Row="1"
                     FontSize="14"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Padding="5"
                     Background="WhiteSmoke">
            </ListBox>

                <ListBox Name="lstTracking"
                         Grid.Column="1"
                         Grid.Row="2"
                         FontSize="14"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         Padding="5"
                         Background="WhiteSmoke">
                </ListBox>

                <ListBox Name="lstEvents"
                         Grid.Column="1"
                         Grid.Row="3"
                         FontSize="14"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         Padding="5"
                         Background="WhiteSmoke">
                </ListBox>


                <ListBox Name="lstSeasonal"
                         Grid.Column="1"
                         Grid.Row="5"
                         FontSize="14"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         Padding="5"
                         Background="WhiteSmoke">
                </ListBox>

                <ListBox Name="lstTargeted"
                         Grid.Column="1"
                         Grid.Row="6"
                         FontSize="14"
                         BorderBrush="Gray"
                         BorderThickness="1"
                         Padding="5"
                         Background="WhiteSmoke">
                </ListBox>

            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
