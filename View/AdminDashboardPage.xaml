<Page x:Class="SD106_Onewhero_Assessment_2.View.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboardPage">


    <Grid Margin="20">
        <!-- Page title -->
        <TextBlock Text="Admin Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <!-- Scrollable list of events -->
        <ScrollViewer Margin="0,40,0,0"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto">

            <!-- This ListBox is what your code-behind adds items to -->
            <ListBox x:Name="lstEvents"
                     FontSize="14"
                     BorderBrush="Gray"
                     BorderThickness="1"
                     Padding="5"
                     Background="WhiteSmoke">
            </ListBox>
        </ScrollViewer>
    </Grid>
</Page>
