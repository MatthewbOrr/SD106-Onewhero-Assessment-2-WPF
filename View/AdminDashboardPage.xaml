<Page x:Class="SD106_Onewhero_Assessment_2.View.AdminDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1e1e1e"
      Title="AdminDashboardPage">

    <Grid Margin="20"
          Width="600">

        <!-- Title -->
        <StackPanel>
            <TextBlock Text="Admin Dashboard"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,10"/>


            <!-- User Data -->
            <TextBlock Text="Users (Admin + Visitors)"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="0,0,0,10"/>

            <ScrollViewer Height="250" VerticalScrollBarVisibility="hidden">
                <DataGrid Name="dataUsers"
                          AutoGenerateColumns="False"
                          Background="White"
                          Foreground="Black"
                          FontSize="14"
                          CanUserAddRows="False"
                          IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding user_id}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding name}" Width="100"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="200"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding phone}" Width="150"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding role}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

            <!-- Booking Data -->
            <TextBlock Text="Bookings Overview"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="20,20,0,10"/>

            <ScrollViewer Height="250" VerticalScrollBarVisibility="hidden">
                <DataGrid Name="dataBookings"
                          AutoGenerateColumns="False"
                          Background="White"
                          Foreground="Black"
                          FontSize="14"
                          CanUserAddRows="False"
                          IsReadOnly="True">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Booking ID" Binding="{Binding booking_id}" Width="80"/>
                        <DataGridTextColumn Header="User" Binding="{Binding user_name}" Width="80"/>
                        <DataGridTextColumn Header="Event" Binding="{Binding event_title}" Width="80"/>
                        <DataGridTextColumn Header="TicketNo" Binding="{Binding number_of_tickets}" Width="80"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding status}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

            <TextBlock Name="txtStatus"
                       Foreground="LightGray"
                       FontSize="12"
                       Margin="5,10,0,0"/>

        </StackPanel>
    </Grid>
</Page>