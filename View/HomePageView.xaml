<Window x:Class="SD106_Onewhero_Assessment_2.View.HomePageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
        mc:Ignorable="d"
        Title="HomePageView" Height="550" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown" Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="35">
        <Border.Background>
            <ImageBrush ImageSource="/images/onewhero-bay.jpeg" Stretch="None"/>
        </Border.Background>
    <Border CornerRadius="30" BorderThickness="5" Opacity="0.93">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#156aac" Offset="0"/>
                    <GradientStop Color="#097153" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop  Color="#094471" Offset="0"/>
                <GradientStop  Color="#093556" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,2,0,2"/>

                    <TextBlock Text="Onewhero Heritage HomePage" Foreground="White" FontSize="18"
                               FontFamily="Mongolian Baiti" Grid.Column="0" VerticalAlignment="Center" Margin="70,0,0,0"/>
                    
                    <Button Name="btnMinimize" Background="#28aeed" BorderThickness="0" Content="-" Foreground="White"
                            FontSize="16" FontFamily="Mongolian Baiti" Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"  Height="18"
                                        CornerRadius="2"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Name="btnClose" Background="#0D8756" BorderThickness="0" Content="x" Foreground="White"
                            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18"  Height="18"
                                        CornerRadius="2"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
                <!-- Main Content -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Hidden">

                    <StackPanel Grid.Column="1">
                        <StackPanel.Background>
                            <SolidColorBrush Color="White" Opacity=".1"/>
                        </StackPanel.Background>
                        <Image Source="/images/Bay.jpg" Margin="10"/>

                        <StackPanel Orientation="Horizontal">
                            <Image Source="/images/Bay.jpg" Width="300" />
                                <TextBlock Text="This is a picture of Onewhero Bay! Come join!" Margin="20,5,0,0" Foreground="White"/>
                            </StackPanel>
                    </StackPanel>





                    </ScrollViewer>
                </Grid>

                <!-- Footer -->
                <Grid Grid.Row="2">
                    <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,5,5,5"/>
                    
                    <!--<Hyperlink Click="Hyperlink_Login_Click" Foreground="White">Login</Hyperlink>-->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                        <TextBlock Text="About Us"
                                   Name="AboutUs"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Text="Contact Us"
                                   Name="ContactUs"
                                   Foreground="DarkGray"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>

                        <TextBlock Name="FAQ"
                                   Text="FAQ"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="DarkGray"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Name="PrivacyP"
                                   Text="Privacy Policy"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="DarkGray"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Name="TAC"
                                   Text="Terms and Conditions"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="DarkGray"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                    </StackPanel>



                </Grid>
                
            </Grid>
        
    </Border>
    </Border>
</Window>
