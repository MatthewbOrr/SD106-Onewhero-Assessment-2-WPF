<Page x:Class="SD106_Onewhero_Assessment_2.View.LoginHeaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.Model"
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="800"
      Title="LoginHeaderPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Onewhero Heritage Login/Register" Foreground="White" FontSize="18"
   FontFamily="Mongolian Baiti" Grid.Column="0" VerticalAlignment="Center" Margin="20,0,0,0"/>

        <Button Name="btnMinimize" Background="#28aeed" BorderThickness="0" Content="-" Foreground="White"
FontSize="16" FontFamily="Mongolian Baiti" Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="18"  Height="18"
            CornerRadius="2"
            Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Name="btnClose" Background="#0D8756" BorderThickness="0" Content="x" Foreground="White"
FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click">

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="18"  Height="18"
            CornerRadius="2"
            Background="{TemplateBinding Background}">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Page>
