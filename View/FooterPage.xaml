<Page x:Class="SD106_Onewhero_Assessment_2.View.FooterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="800"
      Title="FooterPage">


        <!-- Footer -->
    <Grid Grid.Row="2">
        <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,5,5,5"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

            <TextBlock Text="About Us"
                   Name="AboutUs"
                   Foreground="DarkGray"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="Arial"
                   Cursor="Hand"
                   Margin="10,0,0,0"/>

            <TextBlock Text="Contact Us"
                   Name="ContactUs"
                   Foreground="DarkGray"
                   FontSize="12"
                   FontWeight="Medium"
                   FontFamily="Arial"
                   Cursor="Hand"
                   Margin="10,0,0,0"/>

            <TextBlock Name="FAQ"
                   Text="FAQ"
                   FontSize="12"
                   FontWeight="Medium"
                   Foreground="DarkGray"
                   FontFamily="Arial"
                   Cursor="Hand"
                   Margin="10,0,0,0"/>

            <TextBlock Name="PrivacyP"
                   Text="Privacy Policy"
                   FontSize="12"
                   FontWeight="Medium"
                   Foreground="DarkGray"
                   FontFamily="Arial"
                   Cursor="Hand"
                   Margin="10,0,0,0"/>

            <TextBlock Name="TAC"
                   Text="Terms and Conditions"
                   FontSize="12"
                   FontWeight="Medium"
                   Foreground="DarkGray"
                   FontFamily="Arial"
                   Cursor="Hand"
                   Margin="10,0,0,0"/>
        </StackPanel>

    </Grid>
</Page>
