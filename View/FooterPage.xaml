<Page x:Class="SD106_Onewhero_Assessment_2.Model.FooterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.Model"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="800"
      Title="FooterPage">


        <!-- Footer -->
    <Grid Grid.Row="2">
        <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,5,5,5"/>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0">

            <Button Name="AboutUs" Background="Transparent" Margin="10,0,0,0"
                    BorderThickness="0" Click="AboutUs_Click">
                <TextBlock Text="About Us"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>

            <Button Name="ContactUs" Background="Transparent" Margin="10,0,0,0"
                    BorderThickness="0" Click="AboutUs_Click">
                <TextBlock Text="Contact Us"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/> 
            </Button>
            
            <Button Name="FAQ" Background="Transparent" Margin="10,0,0,0"
                    BorderThickness="0" Click="AboutUs_Click">
                <TextBlock Text="FAQ"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>

            <Button Name="PrivacyP" Background="Transparent" Margin="10,0,0,0"
                    BorderThickness="0" Click="PrivacyP_Click">
                <TextBlock Text="Privacy Policy"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>

            <Button Name="TaC" Background="Transparent" Margin="10,0,0,0"
                    BorderThickness="0" Click="PrivacyP_Click">
                <TextBlock Text="Terms and Conditions"
                    Foreground="DarkGray"
                    FontSize="12"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>
            
        </StackPanel>

    </Grid>
</Page>
