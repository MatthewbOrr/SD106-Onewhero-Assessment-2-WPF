                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Name="PrivacyP"
                                   Text="Privacy Policy"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="DarkGray"
                                   FontFamily="Arial"
                                   Cursor="Hand"
                                   Margin="10,0,0,0"/>
                        
                        <TextBlock Name="TAC"
                                   Text="Terms and Conditions"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="DarkGray"
                                   FontFamily="Arial"
                                   Cursor="Hand"
