<Page x:Class="SD106_Onewhero_Assessment_2.Model.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.Model"
      mc:Ignorable="d"
      Title="HomePage"
      Background="Transparent">

    <!-- Scrollable content -->
    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
        <!-- Centered Grid with fixed width -->
        <Grid Width="700" HorizontalAlignment="Center" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title -->
                <RowDefinition Height="Auto"/>
                <!-- Main Image -->
                <RowDefinition Height="Auto"/>
                <!-- Horizontal Section -->
                <RowDefinition Height="Auto"/>
                <!-- Booking Button -->
                <RowDefinition Height="Auto"/>
                <!-- Bottom Images -->
            </Grid.RowDefinitions>

            <!-- Page Title -->
            <TextBlock Grid.Row="0" Text="Come visit the Heritage site of Onewhero Bay!" 
                       FontSize="24" FontWeight="SemiBold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Main Image -->
            <Image Grid.Row="1" Source="/images/Bay.jpg" Width="680" HorizontalAlignment="Center"/>

            <!-- Horizontal Section: Image + Text -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/images/Marae.jpg" Margin="10"/>
                <TextBlock Grid.Column="1" Width="330" Margin="10" Foreground="White" TextWrapping="Wrap" FontSize="14"
                           Text="See our cultural Marae grounds and learn the history of New Zealand and the surrounding events that have shaped the land around us today.
                           
                           See our exhibits of our native birds, age-old reptiles, and our very special flightless bird, the Kiwi. With a nocturnal enclosure you can get up close and personal with them. The only place on earth to see this special little bird."/>

            </Grid>

            <!-- Booking Button -->
            <Button Grid.Row="3" Name="btnBook" Width="100" Height="28" HorizontalAlignment="Center"
                    Background="#156aac" BorderThickness="0" Content="Book" Foreground="White"
                    FontSize="16" FontFamily="Arial" Cursor="Hand" Margin="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="5"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Bottom Images -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Image Source="/images/Kiwi.jpg" Height="200" Margin="10"/>
                <Image Source="/images/hero_tuatara.jpg" Height="200" Margin="10"/>
            </StackPanel>

        </Grid>
    </ScrollViewer>
</Page>
