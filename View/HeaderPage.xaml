<Page x:Class="SD106_Onewhero_Assessment_2.View.HeaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.View"
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="800"
      Title="HeaderPage">

    <!-- Header -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
            <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,2,0,2"/>

        <TextBlock Name="title" Text="Onewhero Heritage Park" Foreground="White" FontSize="18"
               FontFamily="Mongolian Baiti" Grid.Column="0" VerticalAlignment="Center" Cursor="Hand" Margin="20,0,0,0"/>

        

            <TextBlock Text="Attractions"
           Name="Attractions"
           Foreground="White"
           FontSize="16"
           FontWeight="Medium"
           FontFamily="Arial"
           Cursor="Hand"
           Margin="80,5,0,0"/>

            <TextBlock Text="Events"
           Name="Events"
           Foreground="White"
           FontSize="16"
           FontWeight="Medium"
           FontFamily="Arial"
           Cursor="Hand"
           Margin="20,5,0,0"/>

            <TextBlock Name="AboutUs"
           Text="About Us"
           FontSize="16"
           FontWeight="Medium"
           Foreground="White"
           FontFamily="Arial"
           Cursor="Hand"
           Margin="20,5,0,0"/>

        </StackPanel>

        <Button Name="btnMinimize" Background="#28aeed" BorderThickness="0" Content="-" Foreground="White"
            FontSize="16" FontFamily="Mongolian Baiti" Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Width="18"  Height="18"
                        CornerRadius="2"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>

    <Button Name="btnClose" Background="#0D8756" BorderThickness="0" Content="x" Foreground="White"
            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click">

        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Width="18"  Height="18"
                        CornerRadius="2"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>
        
    </Grid>
</Page>
