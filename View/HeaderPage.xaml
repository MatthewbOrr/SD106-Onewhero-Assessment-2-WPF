<Page x:Class="SD106_Onewhero_Assessment_2.view.HeaderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2.Model"
      mc:Ignorable="d" 
      d:DesignHeight="30" d:DesignWidth="800"
      Title="HeaderPage">

    <!-- Header -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
            <Image Source="/images/Logo_8.png" HorizontalAlignment="Left" Margin="15,2,0,2"/>

            <Button Name="Title" Background="Transparent" BorderThickness="0" 
                    Margin="10,0,0,0" Click="Title_Click">
                <TextBlock  Text="Onewhero Heritage Park" Foreground="White" FontSize="18"
       FontFamily="Mongolian Baiti" Grid.Column="0" VerticalAlignment="Center" Cursor="Hand" />
            </Button>
        


            <Button Name="Attractions" Background="Transparent" Margin="40,0,0,0"
                    BorderThickness="0" Click="Attractions_Click">
                <TextBlock Text="Attractions"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="Medium"
                            FontFamily="Arial"
                            Cursor="Hand"/>
            </Button>


            <Button Name="Events" Background="Transparent" Margin="20,0,0,0"
        BorderThickness="0" Click="Events_Click">
                <TextBlock Text="Events"
                Foreground="White"
                FontSize="14"
                FontWeight="Medium"
                FontFamily="Arial"
                Cursor="Hand"/>
            </Button>

            <Button Name="AboutUs" Background="Transparent" Margin="20,0,0,0"
        BorderThickness="0" Click="AboutUs_Click">
                <TextBlock Text="About Us"
                Foreground="White"
                FontSize="14"
                FontWeight="Medium"
                FontFamily="Arial"
                Cursor="Hand"/>
            </Button>

            <Button Name="Booking" Background="Transparent" Margin="20,0,0,0"
                    BorderThickness="0" Click="Booking_Click">
                <TextBlock Text="Booking"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>

            <Button Name="Dashboard" Background="Transparent" Margin="20,0,0,0"
                    BorderThickness="0" Click="VisitorDashboard_Click">
                <TextBlock Text="Dashboard"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Medium"
                    FontFamily="Arial"
                    Cursor="Hand"/>
            </Button>

        </StackPanel>

        <Button Name="btnMinimize" Background="#28aeed" BorderThickness="0" Content="-" Foreground="White"
            FontSize="16" FontFamily="Mongolian Baiti" Cursor="Hand" Grid.Column="1" Click="btnMinimize_Click">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Width="18"  Height="18"
                        CornerRadius="2"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>

    <Button Name="btnClose" Background="#0D8756" BorderThickness="0" Content="x" Foreground="White"
            FontSize="12" FontFamily="Arial" Cursor="Hand" Grid.Column="2" Click="btnClose_Click">

        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border Width="18"  Height="18"
                        CornerRadius="2"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Button.Template>
    </Button>
        
    </Grid>
</Page>
