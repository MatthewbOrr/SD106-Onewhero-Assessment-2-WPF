<Page x:Class="SD106_Onewhero_Assessment_2.AboutUs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SD106_Onewhero_Assessment_2"
      xmlns:userControls="clr-namespace:SD106_Onewhero_Assessment_2.View.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutUs">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--About Us-->
        <Rectangle Fill="White"/>
        <TextBlock Text="About Us" FontSize="24" Margin="10,10,0,0" FontWeight="SemiBold"/>
        <Label />

        <!--FAQ's-->

        <!--Contact Us-->
        <Grid Grid.Row="2" Width="200" Background="White" Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <userControls:UserControl1 Grid.Row="0" Width="200" Height="40" Placeholder="First Name"/>
            <userControls:UserControl1 Grid.Row="1" Width="200" Height="40" Placeholder="Last Name"/>
            <userControls:UserControl1 Grid.Row="2" Width="200" Height="40" Placeholder="Age"/>
            <userControls:UserControl1 Grid.Row="3" Width="200" Height="40" Placeholder="Email"/>
            <userControls:UserControl1 Grid.Row="4" Width="200" Height="40" Placeholder="Phone Number"/>
            <Button Grid.Row="5" Name="btnSubmit" Content="Submit" Width="100" Height="30" Click="btnSubmit_Click"/>
        </Grid>
        
        <!--Terms and Conditions-->

        <!--Privacy Policy-->
        
    </Grid>
</Page>
